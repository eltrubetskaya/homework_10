{% extends "VetaHomeworkBundle::layout.html.twig" %}

{% block title %}VetaHomeworkBundle:Tag{% endblock %}

{% block header %}
    <div class="row">
        <div class="col-lg-12">
            {% include 'VetaHomeworkBundle:Site:navbar.html.twig' with {'active': 'tag'} %}
            <h2 class="jumbotron">All Tags</h2>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="row">
        {% embed "VetaHomeworkBundle:Site:_partial.html.twig" %}
            {% block left_block %}
                <div class="list-group">
                    {% if tags is iterable %}
                        {% for tag in tags %}
                            <a href="{{ path('veta_homework_tag_view', {'id': tag.id}, false) }}" class="list-group-item" title="View this Tag">
                                <h5>{{ tag.title }}</h5>
                            </a>
                        {% endfor %}
                    {% endif %}
                </div>
            {% endblock %}
            {% block right_block %}
                {% if message is defined %}
                    <div class="alert alert-warning" role="alert">  {{ "%that%: %this%"|replace({'%that%': "Message", '%this%': message}) }}</div>
                {% endif %}
            {% endblock %}
        {% endembed %}
    </div>
{% endblock %}

