{% extends "VetaHomeworkBundle::layout.html.twig" %}

{% block title %}VetaHomeworkBundle:Theme{% endblock %}

{% block header %}
    <div class="row">
        <div class="col-lg-12">
            {% include 'VetaHomeworkBundle:Site:navbar.html.twig' with {'active': 'theme'} %}
            <h2 class="jumbotron">All Themes</h2>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="row">
        {% embed "VetaHomeworkBundle:Site:_partial.html.twig" %}
            {% block left_block %}
                <div class="list-group">
                    {% if themes is iterable %}
                        {% for theme in themes %}
                            <a href="{{ path('veta_homework_theme_view', {'id': theme.id}, false) }}" class="list-group-item" title="View this Theme">
                                <h4>{{ theme.title }}</h4>
                            </a>
                        {% endfor %}
                    {% endif %}
                </div>
            {% endblock %}
            {% block right_block %}
                {% if message is defined %}
                    <div class="alert alert-warning" role="alert">  {{ "%that%: %this%"|replace({'%that%': "Message", '%this%': message}) }}</div>
                {% endif %}
            {% endblock %}
        {% endembed %}
    </div>
{% endblock %}

