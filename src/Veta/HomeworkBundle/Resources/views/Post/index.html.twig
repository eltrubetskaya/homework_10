{% extends "VetaHomeworkBundle::layout.html.twig" %}

{% block title %}VetaHomeworkBundle:Post{% endblock %}

{% block header %}
    <div class="row">
        <div class="col-lg-12">
            {% include 'VetaHomeworkBundle:Site:navbar.html.twig' with {'active': 'post'} %}
            <h2 class="jumbotron">All Posts</h2>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="row">
        {% embed "VetaHomeworkBundle:Site:_partial.html.twig" %}
            {% block left_block %}
                <div class="list-group">
                    {% if posts is iterable %}
                        {% for post in posts %}
                            <a href="{{ path('veta_homework_post_view', {'id': post.id}, false) }}" class="list-group-item" title="View this Post">
                                <h5>{{ post.title }}</h5>
                                <date>{{ post.dateCreate|date('Y-m-d H:m:s') }}</date>
                                <p>{{ post.discription }}</p>
                            </a>
                        {% endfor %}
                    {% endif %}
                </div>
            {% endblock %}
            {% block right_block %}
                {% if message is defined %}
                    <div class="alert alert-warning" role="alert">  {{ "%that%: %this%"|replace({'%that%': "Message", '%this%': message}) }}</div>
                {% endif %}
            {% endblock %}
        {% endembed %}
    </div>
{% endblock %}

