{% extends "VetaHomeworkBundle::layout.html.twig" %}

{% block title %}VetaHomeworkBundle:Info{% endblock %}

{% block header %}
    <div class="row">
        <div class="col-lg-12">
            {% include 'VetaHomeworkBundle:Site:navbar.html.twig' with {'active': 'info'} %}
            <h2 class="jumbotron">All Info Pages</h2>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="row">
        {% embed "VetaHomeworkBundle:Site:_partial.html.twig" %}
            {% block left_block %}
                <div class="list-group">
                    {% if pages is iterable %}
                        {% for info in pages %}
                            <a href="{{ path('veta_homework_info_view', {'id': info.id}, false) }}" class="list-group-item" title="View this Info Page">
                                <h4>{{ info.title }}</h4>
                                <p>{{ info.text }}</p>
                            </a>

                        {% endfor %}
                    {% endif %}
                </div>
            {% endblock %}
            {% block right_block %}
                {% if message is defined %}
                    <div class="alert alert-warning" role="alert">  {{ "%that%: %this%"|replace({'%that%': "Message", '%this%': message}) }}</div>
                {% endif %}
            {% endblock %}
        {% endembed %}
    </div>
{% endblock %}

